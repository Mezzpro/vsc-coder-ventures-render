{
  "name": "mezzpro-interface",
  "displayName": "MezzPro Interface",
  "description": "Provides a custom interface for the MezzPro Blockchain Platform inside VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "publisher": "mezzpro",
  "main": "./extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mezzpro-sidebar-view",
          "title": "MezzPro",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "mezzpro-sidebar-view": [
        {
          "id": "mezzpro.navigationView",
          "name": "Navigation",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "mezzpro.showPage",
        "title": "Show MezzPro Page"
      }
    ]
  }
}
